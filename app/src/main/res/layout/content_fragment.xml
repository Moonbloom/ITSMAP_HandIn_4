<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/content_fragment_name_logo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/content_fragment_logo_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/content_fragment_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/content_fragment_logo_imageview"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_fragment_api_level_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content_fragment_name_logo_layout">

        <TextView
            android:id="@+id/content_fragment_api_level_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_fragment_api_level_headline"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/content_fragment_api_level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignBaseline="@+id/content_fragment_api_level_headline"
            android:layout_toRightOf="@id/content_fragment_api_level_headline"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_fragment_version_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content_fragment_api_level_layout">

        <TextView
            android:id="@+id/content_fragment_version_number_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_fragment_version_headline"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/content_fragment_version_number_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignBaseline="@id/content_fragment_version_number_headline"
            android:layout_toRightOf="@id/content_fragment_version_number_headline"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_fragment_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content_fragment_version_number_layout">

        <TextView
            android:id="@+id/content_fragment_description_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_fragment_description_headline"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/content_fragment_description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignBaseline="@id/content_fragment_description_headline"
            android:layout_toRightOf="@id/content_fragment_description_headline"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_fragment_current_version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content_fragment_description_layout">

        <TextView
            android:id="@+id/content_fragment_current_version_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_fragment_current_version_headline"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/content_fragment_current_version_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignBaseline="@id/content_fragment_current_version_headline"
            android:layout_toRightOf="@id/content_fragment_current_version_headline"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>